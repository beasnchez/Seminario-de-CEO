    <script>
        function calculateRisk() {
            const age = document.getElementById('age').value;
            const tumorSize = document.getElementById('tumor-size').value;
            const markers = document.getElementById('markers').value;
            
            let risk;
            let riskClass;
            
            // Algoritmo simplificado de evaluación de riesgo
            const riskScore = (tumorSize * 0.5) + (markers * 0.3) + (age * 0.2);
            
            if (riskScore > 70) {
                risk = "Riesgo Alto";
                riskClass = "risk-high";
            } else if (riskScore > 40) {
                risk = "Riesgo Medio";
                riskClass = "risk-medium";
            } else {
                risk = "Riesgo Bajo";
                riskClass = "risk-low";
            }
            
            const resultDiv = document.getElementById('risk-result');
            resultDiv.textContent = risk;
            resultDiv.className = `risk-level ${riskClass}`;
        }
    </script>
